
{{#if loggedIn}}
<ol class="post-list">
  {{#each posts}}
  <li>
    <article class="post">
      <div class="title">
      <a href="/"> {{title}}</a>
      </div>
      <div class="meta">
        By {{user.username}} on
        {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>
{{else}}
<h5>Click login to join the fun!</h5>
{{/if}}

 {{#unless loggedIn}}
  <script src="/javascript/login.js"></script>
  {{/unless}}